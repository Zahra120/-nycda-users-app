extends ../application.pug

block content
	.container
		form(class="form-inline" action="/users" method="POST")
			.form-group
				label(for="exampleInputName2") Firstname
				input(type="text" class="form-control" id="exampleInputName2" placeholder="Jane Doe" name="firstname")

			.form-group
				label(for="exampleInputEmail2") Lastname
				input(type="text" class="form-control" id="exampleInputLastname2" placeholder="jane.doe" name="lastname")

			.form-group
				label(for="exampleInputEmail2") Email
				input(type="email" class="form-control" id="exampleInputEmail2" placeholder="jane.doe@example.com" name="email")

			button(type="submit" class="btn btn-default") add user
